{
  "compilerOptions": {
    "lib": [
      "ES2017"
    ],
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "types": [
      "node"
    ],
    "paths": {},
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "tslint.json",
    "**/tests/*"
  ],
  "include": [
    "src/**/*",
    "src/.ts"
  ],
}